<h1>All articles</h1>
<%= link_to '+ Add a new article', new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <li>
    <h1><%= link_to article.title, article_path(article) %></h1>
    <%= article.content %>
    <%= link_to article_path(article), method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class='far fa-trash-alt'></i>
    <% end %>
    </li>
  <% end %>
</ul>
